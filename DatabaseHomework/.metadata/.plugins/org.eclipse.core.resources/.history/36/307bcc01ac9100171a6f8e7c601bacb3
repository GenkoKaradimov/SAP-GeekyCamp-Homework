package console.IO;

public class ConsoleHelp {
	public static void generalHelp() {
		System.out.println("");
		facultyHelp();
		studentHelp();
		courseHelp();
	}

	public static void facultyHelp() {
		System.out.println("FACULTIES HELP");
		System.out.println("FACULTIES CREATE <name>");
		System.out.println("FACULTIES ALL");
		System.out.println("FACULTIES UPDATE <name-now> <new-name>");
		System.out.println("FACULTIES DELETE <name>");
	}

	public static void studentHelp() {
		System.out.println("STUDENTS HELP");
		System.out.println("STUDENTS CREATE <name> <age> <faculty-id>");
		System.out.println("STUDENTS ALL");
		System.out
				.println("STUDENTS UPDATE <name-now> <age-now> <faculty-id-now> <new-name> <new-age> <new-faculty-id>");
		System.out.println("STUDENTS DELETE <name> <age> <faculty-id>");
		System.out.println("");
		System.out.println("STUDENTS COURSES <student-name> <student-age>");
		System.out.println("STUDENTS ADD-TO-COURSE <student-name> <student-age> <course-name> <course-lecturer-name>");
		System.out.println(
				"STUDENTS REMOVE-FROM-COURSE <student-name> <student-age> <course-name> <course-lecturer-name>");
	}

	public static void courseHelp() {
		System.out.println("COURSES HELP");
		System.out.println("COURSES CREATE <name> <lecturer-name>");
		System.out.println("COURSES ALL");
		System.out.println("COURSES UPDATE <name-now> <lecturer-name-now> <new-name> <new-lecturer-name>");
		System.out.println("COURSES DELETE <name> <lecturer-name>");
		System.out.println("");
		System.out.println("COURSES STUDENTS <course-name> <course-lecturer-name>");
		System.out.println("COURSES ADD-STUDENTS <student-name> <student-age> <course-name> <course-lecturer-name>");
		System.out.println("COURSES REMOVE-STUDENTS <student-name> <student-age> <course-name> <course-lecturer-name>");

	}
}
